<div class="container">
  <h2 class='text-center mb-4'>Vista de productos</h2>
	{{#if count}}
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <td>Nombre</td>
          <td>Precio</td>
          <td>Foto</td>
        </tr>  
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{title}}</td>
          <td>{{price}}</td>
          <td>
            <img src="{{thumbnail}}" class="" alt="20px">
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table> 
  {{else}}
		<div class='alert alert-danger' role='alert'>
			No hay productos disponibles, para agregar presione <a href='/api/productos/formulario' class='danger-link'>aqui</a>
		</div>
	{{/if}}
</div>
